generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model School {
  id          String   @id @default(cuid())
  name        String
  nameKorean  String?
  location    String
  logo        String
  pdfUrl      String
  type        SchoolType
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("schools")
}

enum SchoolType {
  LANGUAGE_INSTITUTE
  UNIVERSITY
  GRADUATE_SCHOOL

  @@map("school_types")
}

model AgencySettings {
  id            Int      @id
  agencyName    String
  defaultLocale String
  supportEmail  String
  supportPhone  String?
  facebookUrl   String?
  consultationUrl String?
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
}